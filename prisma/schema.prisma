datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String @id @default(cuid())
  email String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  password Password?
  games    Game[]
}

model Password {
  hash String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique
}

model Player {
  id     String          @id @default(cuid())
  name   String          @unique
  rounds PlayerInRound[]
  games  PlayerInGame[]
}

model Stake {
  id            String @id @default(cuid())
  game          Int
  betterGame    Int
  seven         Int
  betterSeven   Int
  hundred       Int
  betterHundred Int
  hundredSeven  Int
  betl          Int
  durch         Int
}

model Game {
  id        String         @id @default(cuid())
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  rounds    Round[]
  user      User?          @relation(fields: [userId], references: [id])
  userId    String?
  players   PlayerInGame[]
  isActive  Boolean        @default(false)
}

model PlayerInGame {
  game       Game   @relation(fields: [gameId], references: [id])
  player     Player @relation(fields: [playerId], references: [id])
  position   Int
  gameId     String
  playerId   String
  totalScore Int    @default(0)

  @@id([gameId, playerId])
  @@unique([gameId, playerId, position])
}

model PlayerInRound {
  round  Round  @relation(fields: [roundId], references: [id])
  player Player @relation(fields: [playerId], references: [id])

  roundId  String
  playerId String
  score    Int

  @@id([roundId, playerId])
}

model Result {
  id            String @id @default(cuid())
  game          Int
  betterGame    Int
  seven         Int
  betterSeven   Int
  hundred       Int
  betterHundred Int
  hundredSeven  Int
  betl          Int
  durch         Int
}

model Round {
  id      String          @id @default(cuid())
  number  Int
  gameId  String
  game    Game            @relation(fields: [gameId], references: [id])
  players PlayerInRound[]
}
